{
  "name": "timer-widget",
  "version": "1.0.1",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:ui": "vite build",
    "preview": "vite preview",
    "start": "concurrently \"pnpm dev\" \"wait-on tcp:5173 && electron .\"",
    "build": "pnpm build:ui && electron-builder --win portable --publish never"
  },
  "build": {
    "appId": "com.unendev.timer-widget",
    "productName": "Timer Widget",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.cjs",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "portable"
      ],
      "icon": "icon.ico"
    },
    "portable": {
      "artifactName": "TimerWidget-${version}.exe"
    }
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron"
    ]
  },
  "keywords": [],
  "author": "unendev",
  "license": "ISC",
  "description": "Desktop timer widget for Project Nexus",
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^25.1.8",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@ai-sdk/react": "^3.0.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-popover": "^1.1.15",
    "@vitejs/plugin-react": "^5.1.2",
    "ai": "^6.0.3",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "lucide-react": "^0.562.0",
    "next-auth": "^4.24.13",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.11.0",
    "remark-gfm": "^4.0.1",
    "swr": "^2.3.8",
    "tailwind-merge": "^3.4.0",
    "vite": "^7.3.0"
  }
}
